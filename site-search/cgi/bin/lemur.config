<lemurconfig>
  <templatepath>./templates/</templatepath>
  <rootpaths strippath="true">
    <path>/path/to/original/data/</path>
  </rootpaths>
  <supportanchortext>true</supportanchortext>
  <addtorootpath>your/root/path/for/documents</addtorootpath>
  <indexes>
    <index>
      <path>/path/to/an/index</path>
      <description>Sample Index Number One</description>
    </index>
    <index>
      <path>/path/to/another/index</path>
      <description>Sample Index Number Two</description>
    </index>
  </indexes>
</lemurconfig>
